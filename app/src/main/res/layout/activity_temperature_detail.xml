<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:padding="16dp"
    tools:context=".activity.TemperatureDetailActivity">

    <!-- Đồng hồ đo nhiệt độ -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressIndicatorTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:progress="0"
        app:indicatorColor="?attr/colorPrimary"
        app:indicatorSize="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:trackColor="#E0E0E0"
        app:trackCornerRadius="8dp"
        app:trackThickness="16dp"
        tools:progress="28" />

    <!-- Số liệu nhiệt độ ở giữa đồng hồ -->
    <TextView
        android:id="@+id/textViewCurrentTemperatureDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/progressIndicatorTemperature"
        app:layout_constraintEnd_toEndOf="@id/progressIndicatorTemperature"
        app:layout_constraintStart_toStartOf="@id/progressIndicatorTemperature"
        app:layout_constraintTop_toTopOf="@id/progressIndicatorTemperature"
        tools:text="28.5°C" />

    <TextView
        android:id="@+id/textViewTemperatureTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/temperature"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progressIndicatorTemperature" />

</androidx.constraintlayout.widget.ConstraintLayout>
