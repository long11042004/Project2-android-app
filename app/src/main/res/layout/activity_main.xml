<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".activity.MainActivity">

    <!-- MQTT Connection Status -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trạng thái Thiết bị"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvLastSeen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chưa có dữ liệu"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvMqttStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Offline"
                android:textStyle="bold"
                android:textColor="#757575"
                android:layout_marginEnd="8dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvMqttStatusDot"
                android:layout_width="12dp"
                android:layout_height="12dp"
                app:cardBackgroundColor="#9E9E9E"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        app:columnCount="2"
        app:rowCount="2">

    <!-- CardView for Temperature -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewTemperature"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:contentDescription="@string/temperature"
                android:src="@drawable/ic_thermometer"
                app:tint="@color/temperature_red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/temperature"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/temperature_default"
                android:textAlignment="center"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"/>

            <Button
                android:id="@+id/btnDetailTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/view_detail"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/temperature_red"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- CardView for Air Humidity -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewAirHumidity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:contentDescription="@string/air_humidity"
                android:src="@drawable/ic_air"
                app:tint="@color/air_humidity_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/air_humidity"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewHumidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/air_humidity_default"
                android:textAlignment="center"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"/>

            <Button
                android:id="@+id/btnDetailHumidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/view_detail"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/air_humidity_blue"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- CardView for Soil Moisture -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewSoilMoisture"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:contentDescription="@string/soil_moisture"
                android:src="@drawable/ic_dirt"
                app:tint="@color/brown" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/soil_moisture"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewSoilMoisture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/soil_moisture_default"
                android:textAlignment="center"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"/>

            <Button
                android:id="@+id/btnDetailSoil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/view_detail"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/brown"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- CardView for Pump Control -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewPump"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                 <ImageView
                     android:layout_width="96dp"
                     android:layout_height="96dp"
                     android:contentDescription="@string/pump"
                     android:src="@drawable/ic_pumper"
                     app:tint="@color/mint" />

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="8dp"
                     android:text="@string/pump"
                     android:textSize="22sp"
                     android:textStyle="bold" />

                 <!-- Status Indicator -->
                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="4dp"
                     android:gravity="center_vertical"
                     android:orientation="horizontal">

                     <androidx.cardview.widget.CardView
                         android:id="@+id/cvPumpStatusDot"
                         android:layout_width="12dp"
                         android:layout_height="12dp"
                         app:cardBackgroundColor="#9E9E9E"
                         app:cardCornerRadius="6dp"
                         app:cardElevation="0dp" />

                     <TextView
                         android:id="@+id/textViewPumpStatus"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginStart="8dp"
                         android:text="@string/pump_status_unknown"
                         android:textSize="18sp"
                         android:textStyle="bold"
                         android:textColor="?android:attr/textColorPrimary"/>
                 </LinearLayout>

                <Button
                    android:id="@+id/btnDetailPump"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/view_detail"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/mint"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.gridlayout.widget.GridLayout>
</LinearLayout>
