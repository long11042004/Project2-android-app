<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <!-- Trạng thái kết nối (Góc trên phải) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvStatusContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvConnectionStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status_offline"
                android:textColor="#757575"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvStatusDot"
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:cardBackgroundColor="#9E9E9E"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Thẻ điều khiển chính -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@+id/cvStatusContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center_horizontal">

            <!-- Icon máy bơm với nền tròn -->
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="50dp"
                app:cardBackgroundColor="#E0F2F1"
                app:cardElevation="0dp">
                
                <ImageView
                    android:id="@+id/imageViewPump"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_pumper"
                    app:tint="@color/mint" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textViewPumpStatusDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/status_updating"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/textViewPumpLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/pump_status_label"
                android:textSize="14sp"
                android:textColor="#757575"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:background="#EEEEEE"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/control_panel_label"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#424242"
                android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/mode_auto"
                android:textSize="18sp"
                android:textColor="#000000"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchAuto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:thumbTint="@drawable/switch_thumb_auto"
                app:trackTint="@drawable/switch_track_auto"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/mode_manual"
                android:textSize="18sp"
                android:textColor="#000000"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchManual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:thumbTint="@drawable/switch_thumb_manual"
                app:trackTint="@drawable/switch_track_manual"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_stats_label"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#424242"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"/>

        <!-- Biểu đồ tròn thống kê -->
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChartPump"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>
    </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
