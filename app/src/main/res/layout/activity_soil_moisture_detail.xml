<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:padding="16dp"
    tools:context=".activity.SoilMoistureDetailActivity">

    <!-- Đồng hồ đo độ ẩm -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressIndicatorSoilMoisture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:progress="0"
        app:indicatorColor="@color/brown"
        app:indicatorSize="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:trackColor="#E0E0E0"
        app:trackCornerRadius="8dp"
        app:trackThickness="16dp"
        tools:progress="65" />

    <!-- Số liệu độ ẩm ở giữa đồng hồ -->
    <TextView
        android:id="@+id/textViewCurrentMoistureDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/progressIndicatorSoilMoisture"
        app:layout_constraintEnd_toEndOf="@id/progressIndicatorSoilMoisture"
        app:layout_constraintStart_toStartOf="@id/progressIndicatorSoilMoisture"
        app:layout_constraintTop_toTopOf="@id/progressIndicatorSoilMoisture"
        tools:text="65%" />

    <TextView
        android:id="@+id/textViewSoilMoistureTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/soil_moisture"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progressIndicatorSoilMoisture" />

    <!-- Biểu đồ lịch sử độ ẩm đất-->
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChartSoilMoistureHistory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSoilMoistureTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>
